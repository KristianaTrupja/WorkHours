generator client {
  provider = "prisma-client-js"
}


datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}
model User {
  id         Int         @id @default(autoincrement())
  username   String      @unique
  email      String      @unique
  role       String
  password   String
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt

  absences   Absence[]
  workHours  WorkHours[]
}


model Holidays {
  id       Int    @id @default(autoincrement())
  date     String 
  holiday    String 
}

model Projects {
  id       Int       @id @default(autoincrement())
  company  String
  project  String

  workHours WorkHours[]
}



enum AbsenceType {
  VACATION
  SICK
  PERSONAL
  PARENTAL
}

model Absence {
  id        String       @id @default(uuid())
  startDate DateTime
  endDate   DateTime
  type      AbsenceType

  userId    Int
  user      User         @relation(fields: [userId], references: [id])
}

model WorkHours {
  id        Int      @id @default(autoincrement())
  date      DateTime
  hours     Float
  note      String?

  userId    Int
  user      User     @relation(fields: [userId], references: [id])

  projectId Int
  project   Projects @relation(fields: [projectId], references: [id])

  @@unique([userId, date, projectId])
}

